<%= form_for [assignment, problem], html: {class: "form-inline row"}, remote: true do |form| %>
	<div class="form-group col-md-2">
		<%= form.number_field :number, class: "form-control input-lg", placeholder: "Problem Num.", style: "width:175px" %>
	</div>
	<div class="form-group col-md-2">
		<%= form.number_field :part, class: "form-control input-lg input-short", placeholder: "Part (Optional)", style: "width:175px" %>
	</div>
	<div class="form-group col-md-3">
		<%= form.text_field :file_name, class: "form-control input-lg", placeholder: "File Name" %>
	</div>
	<div class="form-group col-md-3">
		<%= form.text_field :function_name, class: "form-control input-lg", placeholder: "Function Name" %>
	</div>
	<div class="form-group col-md-2">
		<%= form.submit "Create Problem", class: "btn btn-info btn-lg" %>
	</div>
<% end %>