<% assignment.problems.each do |p| %>
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<h3>Problem <%= p.number.to_s %><% if p.part %>.<%= p.part.to_s %><% end %></h3>
		</div>

		<div class="col-md-2 col-md-offset-2">
			<%= button_to "View", problem_path(p), class:"btn btn-success pull-right btn-lg", :method => :get %>
			<% if current_user.admin %>
				<%= button_to "Edit", edit_problem_path(p), class:"btn btn-info pull-left btn-lg", :method => :get %>
			<% end %>
		</div>

	</div>
<% end %>
