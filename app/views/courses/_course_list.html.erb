<% courses.each do |c| %>
	<% if !c.removed %>
		<div class="row">
			<div class="col-md-4">
				<h2><%= c.code %></h2>
			</div>
			<div class="col-md-4">
				<h2><%= c.name %></h2>
			</div>
			<div class="col-md-3 col-md-offset-1">
				<% if current_user.admin %>
				<%= button_to "Delete", course_remove_path(c), class: "btn btn-danger pull-left btn-lg", :method => :get, remote: true %>
				<% end %>
				<%= button_to "Enter", course_path(c), class: "btn btn-success pull-right btn-lg", :method => :get %>
			</div>
		</div>
	<% end %>
<% end %>
