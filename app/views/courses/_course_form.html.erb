<%= form_for course, :html => {class: "form-inline row"}, remote: true do |form| %>
  <div class="form-group col-md-4">
    <%= form.text_field :code, class: "form-control input-lg", placeholder: "Course Code" %>
	</div>
	<div class="form-group col-md-4">
    <%= form.text_field :name, class: "form-control input-lg", placeholder: "Course Title" %>
	</div>
	<div class="form-group col-md-4">
	   <%= form.submit "New Course", class: "btn btn-white pull-right btn-lg" %>
	</div>
<% end %>
