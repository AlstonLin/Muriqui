<% content_for :navbar do %>
	<li> <%= link_to  @course.code, @course, class: "nav-text" %> </li>
	<li> <a> > </a> </li>
	<li> <%= link_to @assignment.name, @assignment %> </li>
<% end %>

<div class="page-header">
	<h1><%= @assignment.name %></h1>
</div>

<div class="panel">
	<div class="panel-heading panel-heading-style">
		<% if current_user &&  current_user.admin %>
			<%= button_to "New Problem", new_assignment_problem_path(@assignment), class: "btn btn-lg btn-white", :method => :get %>
		<% end %>
	</div>

	<div class="panel-body panel-body-style" id="problems_panel">
		<%= render partial: "problems/problem_list", :locals => { assignment: @assignment } %>
	</div>
</div>
