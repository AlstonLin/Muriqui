<%= form_for [course, assignment], :html => {class: 'form-inline row'}, validate: true, remote: true do |form| %>
  <div class="form-group col-md-4">
	     <%= form.text_field :name, class: "form-control input-lg", placeholder: "Name" %>
	</div>
	<div class="form-group col-md-4">
	     <%= form.date_field :due, class: "form-control input-lg", value: Date.today %>
	</div>
	<div class="form-group col-md-4">
	     <%= form.submit "New Assignment", class: "btn btn-white btn-lg pull-right" %>
	</div>
<% end %>
