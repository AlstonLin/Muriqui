<% course.assignments.each do |a| %>
	<% if !a.removed %>
		<div class="row">
			<div class="col-md-4">
				<h3><%= a.name %></h3>
			</div>

			<div class="col-md-4">
				<h3><%= a.due %></h3>
			</div>

			<div class="col-md-4">
				<% if current_user.admin %>
					<%= button_to "View", assignment_path(a), class: "btn btn-success pull-left btn-lg panel-btn", :method => :get %>
					<%= button_to "Delete", assignment_remove_path(a), class: "btn btn-danger pull-left btn-lg", remote: true, :method => :get %>
				<% else %>
					<%= button_to "View", assignment_path(a), class: "btn btn-success pull-right btn-lg", :method => :get %>
				<% end %>
			</div>
		</div>
	<% end %>
<% end %>
